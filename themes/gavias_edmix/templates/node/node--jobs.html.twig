{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class
  ]
%}
{% if teaser == true %} 
<article{{ attributes.addClass(classes)|without('about') }}>
  <header>
    {{ title_prefix }}
      <h2{{ title_attributes.addClass('node__title') }}>{{ label }}</h2>
    {% set title_suffix = '' %}
    {{ title_suffix }}
  </header>
  <div{{ content_attributes.addClass('node__content', 'clearfix') }}>
    
    {{ content }}
  </div>
</article>

<!-- End Display article for teaser page -->
{% else %}
<!-- Start Display article for detail page -->

  <article{{ attributes.addClass(classes)|without('about') }}>
    <header>
      <div class="container">
        <div class="widget gsc-heading align-left style-default padding-bottom-20">
          <h2{{ title_attributes.addClass('node__title title') }}><span>{{ label }}</span></h2>
        </div>  
      </div>
    </header>
    <div{{ content_attributes.addClass('node__content', 'clearfix') }} id="main_job_page">
	   <div class="date clearfix" id="field_job_date_div"> {{ content.field_job_description }} </div>
	   <div class="date clearfix" id="field_job_body_div"> {{ content.field_job_requirements }}</div>
       <div class="date clearfix" id="field_job_body_div"> {{ content.field_experience_needed }}</div>
       <div class="date clearfix" id="field_job_body_div"> {{ content.field_salary }}</div>
       <div class="date clearfix" id="field_job_body_div"> {{ 	field_vacancies }}</div>
       <div class="date clearfix" id="field_job_body_div"> {{ content.field_job_benefits}}</div>

    </div>
  </article>

{% endif %}
